<div class="login-container">
  <div class="login-wrapper">
    <!-- Login Card -->
    <div class="login-card">
      <div class="card-left-section">
        <div class="login-content">
          <!-- Logo Section -->
          <div class="logo-section">
            <% if (typeof korekLogoPath !== 'undefined') { %>
            <img
              src="<%= korekLogoPath %>"
              alt="Korek Logo"
              class="korek-logo"
            />
            <% } else { %>
            <img
              src="../../img/korekLogo.svg"
              alt="Korek Logo"
              class="korek-logo"
            />
            <% } %>
            <h1 class="portal-title">CCP Portal</h1>
            <p class="portal-subtitle">UAT Platform</p>
          </div>

          <!-- Login Title -->
          <div class="login-title-section">
            <h2 class="login-title">Welcome Back</h2>
            <p class="login-subtitle">Sign in to continue to your account</p>
          </div>

          <!-- Alert Message -->
          <div
            id="alertMessage"
            class="alert-custom alert-danger-custom d-none"
            role="alert"
          >
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <span id="alertText"></span>
          </div>

          <!-- Login Form -->
          <form id="loginForm" class="login-form">
            <div class="form-group-custom">
              <label for="usernameInput" class="form-label-custom">
                <i class="bi bi-person-fill me-2"></i>Username
              </label>
              <div class="input-wrapper">
                <i class="bi bi-person input-icon"></i>
                <input
                  type="text"
                  class="form-control-custom"
                  id="usernameInput"
                  name="username"
                  placeholder="Enter your username"
                  required
                />
              </div>
            </div>

            <div class="form-group-custom">
              <label for="passwordInput" class="form-label-custom">
                <i class="bi bi-lock-fill me-2"></i>Password
              </label>
              <div class="input-wrapper">
                <i class="bi bi-lock input-icon"></i>
                <input
                  type="password"
                  class="form-control-custom"
                  id="passwordInput"
                  name="password"
                  placeholder="Enter your password"
                  required
                />
                <button
                  type="button"
                  class="toggle-password"
                  id="togglePassword"
                >
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>

            <button type="submit" class="btn-login" id="loginButton">
              <span class="btn-text">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
              </span>
              <span class="btn-loader d-none">
                <span class="spinner-border spinner-border-sm me-2"></span>
                Signing in...
              </span>
            </button>
          </form>

          <!-- Footer -->
          <div class="card-footer-custom">
            <p class="footer-text">
              <i class="bi bi-info-circle me-1"></i>
              Need help? Contact your system administrator
            </p>
          </div>
        </div>
      </div>

      <!-- Right Brand Section -->
      <div class="card-right-section">
        <div class="brand-content">
          <div class="brand-logo-wrapper">
            <% if (typeof korekLogoPath !== 'undefined') { %>
            <img
              src="<%= korekLogoPath %>"
              alt="Korek Logo"
              class="korek-logo"
            />
            <% } else { %>
            <img
              src="./img/korekLogo.svg"
              alt="Korek Logo"
              class="korek-logo"
            />
            <% } %>
          </div>
          <div class="brand-text">
            <h2 class="brand-name">KOREK TELECOM</h2>
            <p class="brand-tagline">UAT Platform</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
